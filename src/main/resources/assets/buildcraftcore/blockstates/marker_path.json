{
    "forge_marker": 1,
    "multipart": [
        {"when": {"facing":"up"},
            "apply" : {"model":"buildcraftcore:block/marker_path"}},
        {"when": {"facing":"down"},
        	"apply" : {"model":"buildcraftcore:block/marker_path", "x":180 }},
        {"when": {"facing":"east"},
            "apply" : {"model":"buildcraftcore:block/marker_path", "y":90,  "x":90 }},
        {"when": {"facing":"south"},
            "apply" : {"model":"buildcraftcore:block/marker_path", "y":180, "x":90  }},
        {"when": {"facing":"west"},
            "apply" : {"model":"buildcraftcore:block/marker_path", "y":270, "x":90  }},
        {"when": {"facing":"north"},
            "apply" : {"model":"buildcraftcore:block/marker_path", "x":90  }}
   ]
}
